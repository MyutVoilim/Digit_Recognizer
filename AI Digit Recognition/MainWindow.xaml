<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:ScottPlot="clr-namespace:ScottPlot;assembly=ScottPlot.WPF"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AI_Digit_Recognition"
        xmlns:oxy="http://oxyplot.org/wpf" x:Name="mainWindow" x:Class="AI_Digit_Recognition.MainWindow"
        mc:Ignorable="d"
        Title="MainWindow" Height="614" Width="820">
    <Grid x:Name="DigitGrid" RenderTransformOrigin="0.585,0.573">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="515*"/>
            <ColumnDefinition Width="286*"/>
        </Grid.ColumnDefinitions>
        <Label x:Name="Text1" Content="1" HorizontalAlignment="Left" Margin="399,212,0,0" VerticalAlignment="Top" FontSize="22"/>
        <Button x:Name="Button1" Content="Save AI" HorizontalAlignment="Left" Margin="43,417,0,0" VerticalAlignment="Top" Click="SaveAI" Width="130" Grid.Column="1" Height="55"/>
        <Label x:Name="Text2" Content="Text 2" HorizontalAlignment="Left" Margin="180,199,0,0" VerticalAlignment="Top"/>
        <Button x:Name="Train_AI_Button" Content="Start Training" HorizontalAlignment="Left" Margin="92,284,0,0" VerticalAlignment="Top" Click="TrainAI" Width="128" Height="56"/>
        <Button x:Name="Button3" Content="Load Digit" HorizontalAlignment="Left" Margin="43,270,0,0" VerticalAlignment="Top" Click="GetNumber" Width="130" Height="56" Grid.Column="1"/>
        <Canvas x:Name="fakeCanvas" Background="Black" Margin="264,268,276,50" Height="280" Width="280" MouseDown="onCanvasMouseDown" MouseMove="onCanvasMouseMove" MouseUp="onCanvasMouseUp" Grid.ColumnSpan="2"/>
        <Button Content="Load AI" HorizontalAlignment="Left" Margin="43,353,0,0" VerticalAlignment="Top" Click="Load_AI" Height="55" Width="130" Grid.Column="1"/>
        <Button x:Name="clearButton" Content="Clear" HorizontalAlignment="Left" Margin="43,493,0,0" VerticalAlignment="Top" Click="ClearCanvas" Grid.Column="1" Height="55" Width="130"/>
        <ScottPlot:WpfPlot x:Name="ConfidenceChart" Margin="105,0,105,368" Grid.ColumnSpan="2" />
        <Image x:Name="testImage" HorizontalAlignment="Left" Height="100" Margin="269,298,0,0" VerticalAlignment="Top" Width="100"/>
        <TextBox x:Name="InputTextbox" HorizontalAlignment="Left" Margin="146,470,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="38" PreviewTextInput="TextboxRestrictions" KeyDown="inputEnter"/>
        <Label x:Name="aiInputLabel" Content="Layer Amount:" HorizontalAlignment="Left" Margin="59,466,0,0" VerticalAlignment="Top"/>
        <Button x:Name="createAiButton" Content="Confirm" HorizontalAlignment="Left" Margin="194,469,0,0" VerticalAlignment="Top" Click="createButtonClick"/>

    </Grid>
</Window>
